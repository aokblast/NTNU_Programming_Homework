#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <string.h>

#define i8 int8_t
#define i64 int64_t
#define i32 int32_t

i32 input(const char *,const char *);
void bitwise(i64);
void show_hex(i64);

void bitwise(i64 num){
   show_hex(num);
}

void show_hex(i64 num){
    i8 *ptr_num=(i8 *)calloc(sizeof(i8),8);
    ptr_num=&num;
    for(size_t i=0;i<8;i++){
        printf("(%lu) %02x",i+1,*(ptr_num+i));
    }
    printf("\n");
}

i32 input(const char *msg,const char *mode){
    printf("%s",msg);
    double num=0;
    if(scanf("%lf",&num)==0 && num!=(i32)num) return -1;
    if(strcmp(mode,"num")==0){
        if((i32)num<=8 && (i32)num>=0){
            return num;
        }else{
            return -1;
        }
    }else if (strcmp(mode,"value")==0){
        if((i32)num>=0 && (i32)num<=255){
            return num;
        }else{
            return -1;
        }
        
    }
}

int main(){
    i64 num=0;    
    printf("Please input an integer:");
    if(scanf("%ld",&num)!=1){
        printf("Wrong input.");
    }
    bitwise(num);

}
